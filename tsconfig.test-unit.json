{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@bpits/type-guards": ["./src/index"],
      "@bpits/type-guards/*": ["./src/*"]
    },
    "moduleResolution": "node",
    "noEmit": true,
    "declaration": false,
    "types": ["mocha", "chai", "node"]
  },
  "include": [
    "./tests/unit/**/*",
    "./src/**/*"
  ]
}