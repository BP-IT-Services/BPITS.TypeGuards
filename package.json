{
  "name": "@bpits/type-guards",
  "repository": "https://github.com/BP-IT-Services/BPITS.TypeGuards",
  "version": "0.0.1",
  "description": "A TypeScript library for building robust, type-safe runtime validators with compile-time property validation enforcement and comprehensive debugging capabilities.",
  "license": "MIT",
  "type": "module",
  "main": "index.cjs",
  "scripts": {
    "build": "npx rollup -c",
    "test": "npm run test:compiler && npm run test:unit",
    "test:compiler": "npx tsx --tsconfig ./tsconfig.test-compiler.json tests/compiler/compiler-test-runner.ts",
    "test:unit": "npx mocha tests/unit/**/*.test.ts"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/chai": "^4.3.10",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.1.0",
    "chai": "^5.2.1",
    "mocha": "^11.7.1",
    "rollup": "^4.46.2",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dts": "^6.2.1",
    "shx": "^0.4.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tsx": "^4.20.3",
    "typescript": "^5.5.3"
  },
  "mocha": {
    "require": [
      "ts-node/register"
    ],
    "loader": "ts-node/esm",
    "reporter": "spec",
    "slow": 75,
    "timeout": 2000,
    "ts-node": {
      "project": "./tsconfig.test-unit.json"
    },
    "node-option": [
      "experimental-specifier-resolution=node",
      "loader=ts-node/esm"
    ]
  }
}
